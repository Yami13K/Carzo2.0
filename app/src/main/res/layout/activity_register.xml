<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainActivity">


        <EditText
            android:id="@+id/et4"
            android:layout_width="293dp"
            android:layout_height="47dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="text"
            android:textColor="#E800BCD4"
            app:layout_constraintBottom_toTopOf="@+id/b2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.898" />

        <EditText
            android:id="@+id/et3"
            android:layout_width="293dp"
            android:layout_height="47dp"
            android:ems="10"
            android:hint="Car_model"
            android:inputType="text"
            android:textColor="#E800BCD4"
            app:layout_constraintBottom_toTopOf="@+id/b2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.597" />

        <EditText
            android:id="@+id/et"
            android:layout_width="293dp"
            android:layout_height="47dp"
            android:ems="10"
            android:hint="Username"
            android:inputType="text"
            android:textColor="#E800BCD4"
            app:layout_constraintBottom_toTopOf="@+id/b2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.452" />

        <Button
            android:id="@+id/b2"
            android:layout_width="286dp"
            android:layout_height="61dp"
            android:layout_marginStart="161dp"
            android:layout_marginEnd="161dp"
            android:layout_marginBottom="200dp"
            android:onClick="launch"
            android:text="Register"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/et1"
            android:layout_width="293dp"
            android:layout_height="47dp"
            android:ems="10"
            android:hint="Plate_ID"
            android:inputType="text"
            android:textColor="#E800BCD4"
            app:layout_constraintBottom_toTopOf="@+id/b2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.747" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register your car"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/et"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="208dp"
            android:layout_height="36dp"
            android:text="Already have an acoount?"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.31"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b2"
            app:layout_constraintVertical_bias="0.17" />

        <TextView
            android:id="@+id/signInView"
            android:layout_width="69dp"
            android:layout_height="38dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick"
            android:text="@string/Sign"
            android:textColor="#3366BB "
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.126"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/b2"
            app:layout_constraintVertical_bias="0.16" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>